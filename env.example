# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
# For SQLite (default - easiest for local development):
DATABASE_URL=sqlite:///fundraiser.db

# For PostgreSQL (production - uncomment and update):
# DATABASE_URL=postgresql://fundraiser:fundraiser@localhost:5432/fundraiser

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-password-change-this

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Grid Defaults
DEFAULT_GRID_ROWS=10
DEFAULT_GRID_COLUMNS=10

# PostgreSQL (for docker-compose)
POSTGRES_PASSWORD=fundraiser 